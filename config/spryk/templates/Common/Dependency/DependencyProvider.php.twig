{% extends 'Common/Class.php.twig' %}
{% block namespace %}
namespace {{ organization }}\{{ application }}\{{ module }};
{% endblock %}

{% set extends = '' %}

{% if application == 'Client' %}
    {% set extends = 'Spryker\\Client\\Kernel\\AbstractDependencyProvider' %}
{% elseif application == 'Glue' %}
    {% if applicationType == 'Storefront' %}
        {% set extends = 'Spryker\\Glue\\Kernel\\AbstractBundleDependencyProvider' %}
    {% else %}
        {% set extends = 'Spryker\\Glue\\Kernel\\' ~ applicationType ~ '\\AbstractBundleDependencyProvider' %}
    {% endif %}
{% elseif application == 'Service' %}
    {% set extends = 'Spryker\\Service\\Kernel\\AbstractDependencyProvider' %}
{% elseif application == 'Zed' %}
    {% set extends = 'Spryker\\Zed\\Kernel\\AbstractBundleDependencyProvider' %}
{% endif %}

{% set className = module ~ 'DependencyProvider' %}

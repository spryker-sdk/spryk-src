$queryValue = $value;

switch (getType($value)) {
    case 'boolean':
    case 'integer':
        $type = \PDO::PARAM_INT;
        $queryValue = (int)$value;
        break;
    case 'NULL':
        $type = \PDO::PARAM_NULL;
        break;
    default:
        $type = \PDO::PARAM_STR;
}

return ['val' => $queryValue, 'type' => $type];

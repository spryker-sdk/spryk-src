$sortCollection = ${{ domainEntity | lcfirst }}CriteriaTransfer->getSortCollection();

if ($sortCollection === null) {
    return ${{ domainEntity | lcfirst }}Query;
}

foreach ($sortCollection as $sortTransfer) {
    ${{ domainEntity | lcfirst }}Query->orderBy(
        $sortTransfer->getField(),
        $sortTransfer->getIsAscending() ? static::SORT_ASC : static::SORT_DESC
    );
}

return ${{ domainEntity | lcfirst }}Query;
